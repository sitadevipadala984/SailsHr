{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "check": "tsc --noEmit",
    "db:migrate": "psql \"$DATABASE_URL\" -f db/migrations/001_employee_core.sql",
    "db:migrate:attendance": "psql \"$DATABASE_URL\" -f db/migrations/002_attendance_core.sql"
  },
  "dependencies": {
    "fastify": "^5.2.1",
    "@fastify/cors": "^10.0.1"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "@types/node": "^22.10.5"
  }
}
